<div class="guide-box guide-hide" id="J-guideBox">
  <div class="guide-box-content J-guideContent">
    <img src="/src/images/bg/guide1.png" class="guide-box-image">
    <div class="guide-box-right">
      <img src="/src/images/bg/guide-text.png" class="guide-text">
      <a href="javascript:;" id="J-acceptGuideMode"><img src="/src/images/bg/guide-accept.png"></a>
      <a href="javascript:;" id="J-rejectGuideMode"><img src="/src/images/bg/guide-reject.png"></a>
    </div>
  </div>

  <div class="guide-box-step J-guideContent">
    <img src="/src/images/bg/guide-text2.png" class="guide-text2">

    <a href="javascript:;" class="guide-link J-startGuideMode" data-scene="0" data-firstScene="homepage">
      <img src="/src/images/bg/guide-step1.png" height="29">
    </a>
    <a href="javascript:;" class="guide-link J-startGuideMode" data-scene="1" data-firstscene="homepage">
      <img src="/src/images/bg/guide-step2.png" height="29">
    </a>
    <a href="javascript:;" class="guide-link J-startGuideMode" data-scene="2" data-firstscene="homepage">
      <img src="/src/images/bg/guide-step3.png" height="29">
    </a>
    <a href="javascript:;" class="guide-link J-startGuideMode" data-scene="3" data-firstscene="homepage">
      <img src="/src/images/bg/guide-step4.png" height="29">
    </a>
  </div>

  <a href="javascript:;" class="guide-box-close iconfont J-closeGuideBox">&#xe627;</a>
</div>

<div class="guide-box-small guide-hide" id="J-guideBoxSmall">
  <a href="javascript:;" id="J-showGuideBox">
    <img src="/src/images/bg/guide-small.png">
  </a>
</div>

<!-- 右上角快捷关闭指引模式 -->
<div class="guide-close J-closeGuideMode" id="J-closeGuideMode">
  <a href="javascript:;">
    <i class="iconfont">&#xe627;</i>
  </a>
</div>

